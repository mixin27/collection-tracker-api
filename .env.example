# Application
NODE_ENV=development
PORT=4000
API_PREFIX=api/v1

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/collection_tracker?schema=public"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=collection_tracker

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=collection-tracker-uploads
AWS_S3_BUCKET_URL=https://collection-tracker-uploads.s3.us-east-1.amazonaws.com

# Google Play Billing
GOOGLE_PLAY_PACKAGE_NAME=com.yourapp.collectiontracker
GOOGLE_PLAY_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_PLAY_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
GOOGLE_WEBHOOK_SECRET=change-this-google-webhook-secret
GOOGLE_WEBHOOK_AUDIENCE=https://your-api-domain.com/api/v1/payments/webhook/google
GOOGLE_WEBHOOK_EXPECTED_EMAIL=pubsub-push@your-project.iam.gserviceaccount.com

# Apple App Store Billing
APPLE_BUNDLE_ID=com.yourapp.collectiontracker
APPLE_ISSUER_ID=00000000-0000-0000-0000-000000000000
APPLE_KEY_ID=ABC123DEFG
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
APPLE_APP_ID=1234567890
APPLE_USE_SANDBOX_API=false
APPLE_WEBHOOK_SECRET=change-this-apple-webhook-secret
APPLE_ROOT_CERT_FINGERPRINT_256=

# Product ID -> Tier mapping (JSON)
SUBSCRIPTION_PRODUCT_TIER_MAP={"premium_monthly":"PREMIUM","premium_yearly":"PREMIUM","ultimate_monthly":"ULTIMATE","ultimate_yearly":"ULTIMATE"}

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Session Management
MAX_ACTIVE_DEVICES=3
SESSION_CLEANUP_INTERVAL=3600000

# Sync Configuration
SYNC_TOMBSTONE_RETENTION_DAYS=30
SYNC_MAX_BATCH_SIZE=1000

# Subscription Limits
FREE_MAX_COLLECTIONS=2
FREE_MAX_ITEMS_PER_COLLECTION=50
FREE_MAX_TAGS=10

PREMIUM_MAX_COLLECTIONS=25
PREMIUM_MAX_ITEMS_PER_COLLECTION=1000
PREMIUM_MAX_TAGS=-1

ULTIMATE_MAX_COLLECTIONS=-1
ULTIMATE_MAX_ITEMS_PER_COLLECTION=-1
ULTIMATE_MAX_TAGS=-1
ULTIMATE_MAX_DEVICES=5

# Trial & Promotional Access
TRIAL_ENABLED=true
TRIAL_DAYS=14
TRIAL_TIER=PREMIUM
GLOBAL_FREE_ENABLED=false
GLOBAL_FREE_TIER=PREMIUM
GLOBAL_FREE_START_AT=2026-01-01T00:00:00.000Z
GLOBAL_FREE_END_AT=2026-01-07T23:59:59.999Z
ADMIN_EMAILS=admin@example.com

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
